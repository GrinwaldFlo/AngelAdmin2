# AngelAdmin2 Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Settings
DEBUG=true
CAKE_ENV=development

# Security
# Generate a 32-character random string for SECURITY_SALT
# You can use: openssl rand -base64 32
SECURITY_SALT=your-32-character-random-security-salt-here

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=angeladmin2
DATABASE_USERNAME=your_database_username
DATABASE_PASSWORD=your_database_password

# Test Database (for running tests)
TEST_DATABASE_HOST=localhost
TEST_DATABASE_PORT=3306
TEST_DATABASE_NAME=angeladmin2_test
TEST_DATABASE_USERNAME=your_test_database_username
TEST_DATABASE_PASSWORD=your_test_database_password

# Email Configuration
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=AngelAdmin2

# For Gmail SMTP (example):
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_TLS=true

# Cache Configuration (optional)
# CACHE_DEFAULT_URL=file://tmp/cache/?prefix=angeladmin2_

# Logging URLs (optional)
# LOG_DEBUG_URL=file://logs/?file=debug
# LOG_ERROR_URL=file://logs/?file=error
# LOG_QUERIES_URL=file://logs/?file=queries
# LOG_SECURITY_URL=file://logs/?file=security

# DebugKit Configuration (development only)
DEBUG_KIT_FORCE_ENABLE=false
DEBUG_KIT_SAFE_TLD=local,localhost,test
DEBUG_KIT_IGNORE_AUTHORIZATION=false
